        {
          "name": "Get Benefits Overview",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/benefits.php",
              "host": ["{{base_url}}"],
              "path": ["benefits.php"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains benefits overview data', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.data).to.have.property('stats');",
                  "    pm.expect(jsonData.data).to.have.property('recent_enrollments');",
                  "    pm.expect(jsonData.data).to.have.property('active_plans');",
                  "});"
                ]
              }
            }
          ]
